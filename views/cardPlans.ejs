<%- include('partials/cardplanheader') %>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Credit Card</h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <a class="p-2 text-dark" href="#">Features</a>
    <a class="p-2 text-dark" href="#">Enterprise</a>
    <a class="p-2 text-dark" href="#">Support</a>
    <a class="p-2 text-dark" href="#">Pricing</a>
  </nav>
  <a class="btn btn-outline-primary" href="#">Sign up</a>
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Card Plans</h1>
  <p class="lead">The following are all available card plans, feel free to browse and apply for any card of your choosing. For any clarification you can contact us from any of the options given at the bottomm of the page.</p>
</div>

<% for( var i=0;i<plans.length;i++) {%>
<% var link = "/plan"+plans[i].id %>
<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal"><%= plans[i].name %></h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title"><%= plans[i].interest %>% <small class="text-muted">/ yr</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>Rs. <%= plans[i].allowance %></li>
          <li>Plan ID <%= plans[i].id %></li>
        </ul>
        <% if(plans[i].id == id){ %>
          <a href=<%= link %> ><button type="button" disabled class="btn btn-lg btn-block btn-primary">Applied</button></a>
        <% } else if(id == null || id == undefined) { %>
          <a href=<%= link %> ><button type="button" class="btn btn-lg btn-block btn-primary">Apply</button></a>
        <% } else { %>
          <a href=<%= link %> ><button type="button" class="btn btn-lg btn-block btn-primary">Change Plan</button></a>
        <% } %>

      </div>
    </div>
  </div>
<% } %>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
      <div class="text-center">
        <i class="fas fa-credit-card fa-3x" style="padding:10px"></i>
        <small class="d-block mb-3 text-muted">&copy; 2018-2022</small>
      </div>
  </footer>
</div>

<% include ('partials/footer') %>
