<%- include('partials/cardplanheader') %>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Credit Card</h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <a class="p-2 text-dark" href="#">Features</a>
    <a class="p-2 text-dark" href="#">Enterprise</a>
    <a class="p-2 text-dark" href="#">Support</a>
    <a class="p-2 text-dark" href="#">Pricing</a>
  </nav>
  <a class="btn btn-outline-primary" href="#">Sign up</a>
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Card Plans</h1>
  <p class="lead">Choose plan to delete.</p>
</div>

<% for( var i=0;i<plans.length;i++) {%>
<% var link = "/dele"+plans[i].id %>
<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal"><%= plans[i].name %></h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title"><%= plans[i].interest %>% <small class="text-muted">/ yr</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>Rs. <%= plans[i].allowance %></li>
          <li>Plan ID <%= plans[i].id %></li>
        </ul>
        <a href=<%= link %> ><button type="button" class="btn btn-lg btn-block btn-primary">Delete</button></a>
      </div>
    </div>
  </div>
<% } %>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <i class="fas fa-credit-card fa-1x" style="padding:10px"></i>
        <small class="d-block mb-3 text-muted">&copy; 2018-2022</small>
      </div>
      <div class="col-6 col-md">
        <h5>Features</h5>
        <ul class="list-unstyled text-small">
          <li><a class="text-muted" href="#">Cool stuff</a></li>
