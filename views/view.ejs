<%- include('partials/view-header') %>

<div class="form-signin">
  <div class = "container">
      <h1 class="h3 mb-3 font-weight-normal"> <i class="fas fa-user-circle fa-lg"> </i> User Details </h1>
      <div class="flex-container">
          <div>
              <div class="card">
                <% if(sex == "Male"){%>
                    <img src="assets/img_male.png" alt="Avatar" style="width:100%">
                <%}else{%>
                    <img src="assets/img_female.png" alt="Avatar" style="width:100%">
                <%}%>
                <h4><b><%= name %> </b></h4> 
              </div>
          </div>
          <div>
              <table>
                  <tr>
                      <td> Email </td>
                      <td> <%= email %>  </td>
                  </tr>
                  <tr>
                      <td> Address </td>
                      <td> <%= address %>  </td>
                  </tr>
                  <tr>
                      <td> Aadhar </td>
                      <td> <%= aadhar %>   </td>
                  </tr>
                  <tr>
                      <td> Gender </td>
                      <td> <%= sex %>   </td>
                  </tr>
                  <tr>
                      <td> DOB </td>
                      <td> <%= dob %>   </td>
                  </tr>
              </table>
          </div> 
      </div>
      <br>
      <h1 class="h3 mb-3 font-weight-normal"> <i class="fas fa-credit-card fa-lg"> </i> Card Details </h1>
      <div class="flex-container">
        <main>
            <svg width="100%" height="250">
                <g class="credit-card">
                    <rect x="0" y="0" rx="25" ry="25" width="100%" height="200" fill="#00a8ff"/>
                    <rect x="0" y="45" width="100%" height="40" fill="black"/>
                    <rect x="10" y="110" width="60%" height="25" fill="#e5e5e5"/>
                    <rect x="210" y="110" width="20%"  height="25" fill="#e5e5e5"/>
                    <rect x="10" y="150" width="50%"  height="25" fill="#e5e5e5"/>
                    <rect x="178" y="150" width="92"  height="25" fill="#e5e5e5"/>
                    <text x="15" y="130" font-size="20" fill="black">Card Number</text>
                    <text x="215" y="130" font-size="20" fill="black">CVV</text>
                    <text x="15" y="170" font-size="20" fill="black">Plan</text>
                    <text x="183" y="170" font-size="20" fill="black">Status</text>
                </g>
            </svg>
        </main>
    </div>
  </div>
</div>


<%- include('partials/footer') %>